<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
     <nav class="navbar navbar-expand-lg border-bottom border-dark">
      <ul class="navbar-nav ml-auto">
        <% if customer_signed_in? %>

         <li>ようこそ、<%= current_customer.last_name %>さん！</li>

         <li class = "nav-item">
            <%= link_to "マイページ", customers_path, class: 'btn btn-light ml-3' %>
         </li>

         <li class = "nav-item">
            <%= link_to "商品一覧", items_path, class: 'btn btn-light ml-3' %>
         </li>

         <li class = "nav-item">
            <%= link_to "カート", cart_items_path, class: 'btn btn-light ml-3' %>
         </li>

         <li class = "nav-item">
            <%= link_to "ログアウト", customers_sign_out_path, class: 'btn btn-light ml-3',method: :delete %>
         </li>

        <% elsif admin_signed_in? %>
         <li class = "nav-item">
            <%= link_to "商品一覧", admin_items_path, class: 'btn btn-light ml-3' %>
         </li>

         <li class = "nav-item">
            <%= link_to "会員一覧", admin_customers_path, class: 'btn btn-light ml-3' %>
         </li>

         <li class = "nav-item">
            <%= link_to "注文履歴一覧", admin_orders_path, class: 'btn btn-light ml-3' %>
         </li>

         <li class = "nav-item">
            <%= link_to "ジャンル一覧", admin_genres_path, class: 'btn btn-light ml-3' %>
         </li>

         <li class = "nav-item">
            <%= link_to "ログアウト", destroy_admin_session_path, class: 'btn btn-light ml-3' ,method: :delete %>
         </li>

         <% else %>

         <li class="nav-item">
            <%= link_to "About", home_about_path, class: 'btn btn-light ml-3' %>
         </li>

         <li class="nav-item">
            <%= link_to "商品一覧", items_path, class: 'btn btn-light ml-3' %>
         </li>

         <li class="nav-item">
            <%= link_to "新規登録", customers_sign_up_path, class: 'btn btn-light ml-3' %>
         </li>

         <li class="nav-item">
           <%= link_to "ログイン", customers_sign_in_path, class: 'btn btn-light ml-3' %>
         </li>

         <% end %>
      </ul>
     </nav>
    </header>

    <%= yield %>
  </body>
  <footer>
     <div class="border-bottom border-dark ml-auto">
  </footer>
</html>
