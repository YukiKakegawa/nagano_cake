<h2>会員一覧</h2>

<dic class ="row col-sm-8 offset-sm-2">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
          <!-- <%#= link_to admin_customer_path(customer) do %><%#=customer.last_name %><%#=customer.first_name %><%# end %></td> -->
        <td><%= customer.email %></td>
        <td>
          <% if customer.is_active %>
            <span class="green">有効</span>
          <% else %>
            <span class="secondary">退会</span>
          <% end %>
        </td>
        <!-- <td><%#= customer.is_active ? "有効" : "退会" %></td> -->
      </tr>
      <% end %>
    </tbody>
  </table>
</div>