<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
 <%= form_with model:@customer, url: admin_customer_path(@item), local:true do |f| %>


 <div class="form-group row">
    <%= f.label :id,"会員ID" , class:"col-sm-1 col-form-label" %>
    <div class="col-sm-4">
      <%= f.text_field :id, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :name,"氏名" , class:"col-sm-1 col-form-label" %>
    <div class="col-sm-4">
      <%= f.text_field :last_name, class:"form-control" %>
      <%= f.text_field :first_name, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :name,"フリガナ" , class:"col-sm-1 col-form-label" %>
    <div class="col-sm-4">
      <%= f.text_field :last_name_kana, class:"form-control" %>
      <%= f.text_field :first_name_kana, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :postal_code,"郵便番号" , class:"col-sm-1 col-form-label" %>
    <di class="col-sm-4">
      <%= f.text_field :postal_code, class:"form-control" %>
    </di>
  </div>