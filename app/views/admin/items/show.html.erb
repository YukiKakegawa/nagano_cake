<h2>商品詳細</h2>

<div class="row">
<div class="col-md-4">
 <div class="text-right">
    <%= attachment_image_tag @item, :image, :fill, 200, 200, format: 'jpeg' %>
  </div>
  </div>


<div class="col-md-5">
  <div class="form-group row">
   <h4>商品名</h4>
   <div><%= @item.name %></div>
  </div>

  <div class="form-group row">
   <h4>商品説明</h4>
   <div><%= @item.introduction %></div>
  </div>

  <div class="form-group row">
   <h4>ジャンル</h4>
   <div><%= @item.genre.name %></div>
  </div>

  <div class="form-group row">
   <h4>税込価格（税抜価格）</h4>
   <div><%= @item.price %></div>円
  </div>

  <div class="form-group row">
   <h4>販売ステータス</h4>
   <div><% if @item.is_active %>
    販売中
     <% else %>
    販売停止中
     <% end %>
   </div>
  </div>

 <div><%= link_to "編集する" , edit_admin_item_path(@item) , class:"btn btn-success" %></div>
</div>
</div>

