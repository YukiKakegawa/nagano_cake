<h2>商品新規登録</h2>
  <%= form_with model:@item, url: admin_items_path, local:true do |f| %>

  <div class="form-group row">
    <%= f.label :image,"商品画像" , class:"col-sm-2 col-form-label" %>
    <div class="col-sm-2">
      <%= f.attachment_field :image %>
    </div>
  </div>

   <div class="form-group row">
    <%= f.label :name,"商品名" , class:"col-sm-2 col-form-label" %>
    <div class="col-sm-2">
      <%= f.text_field :name, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :introduction,"商品説明" , class:"col-sm-2 col-form-label" %>
    <div class="col-sm-2">
      <%= f.text_field :introduction, class:"form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :genre_id,"ジャンル" , class:"col-sm-2 col-form-label" %>
    <div class="col-sm-2">
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :price,"税抜価格" , class:"col-sm-2 col-form-label" %>
    <div class="col-sm-2">
      <%= f.text_field :price, class:"form-control" %><p>円</p>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :is_active,"販売ステータス" , class:"col-sm-2 col-form-label" %>
    <div class="col-sm-2">
      <%= f.label :is_active, '販売中' %>
      <%= f.radio_button :is_active, :true %>
　　　<%= f.label :is_active, '販売停止中' %>
      <%= f.radio_button :is_active, :false %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-10 offset-sm-2">
      <%= f.submit "新規登録",class:"btn btn-success" %>
    </div>
  </div>

<% end %>

