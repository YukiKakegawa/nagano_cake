<h2>商品編集</h2>
<%= form_with model:@item, url: admin_item_path(@item),method: :patch, local:true do |f| %>

<div class="row">
  <div class="offset-sm-3"></div>
  <div class="col-sm-6">

  <div class="form-group row">
    <%= f.label :image,"商品画像" , class:"col-sm-3 col-form-label" %>
    <div class="col-sm-4">
      <%= f.attachment_field :image %>
    </div>
  </div>

   <div class="form-group row">
    <%= f.label :name,"商品名" , class:"col-sm-3 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :name, class:"form-control" %>
    </div>
  </div>

   <div class="form-group row">
    <%= f.label :introduction,"商品説明" , class:"col-sm-3 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :introduction, class:"form-control" %>
    </div>
  </div>

    <div class="form-group row">
    <%= f.label :genre,"ジャンル" , class:"col-sm-3 col-form-label" %>
    <div class="col-sm-5">
      <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "選択して下さい", class:"form-control" %>
    </div>
  </div>

   <div class="form-group row">
    <%= f.label :price,"税抜き価格" , class:"col-sm-3 col-form-label" %>
    <div class="col-sm-5">
      <%= f.text_field :price, class:"form-control" %>
    </div>
  </div>

     <div class="form-group row">
    <%= f.label :is_active,"販売ステータス" , class:"col-sm-3 col-form-label" %>
    <div class="col-sm-5">
      <%= f.label :is_active, '販売中' %>
      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, '販売停止中' %>
      <%= f.radio_button :is_active, :false %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-7 offset-sm-4">
      <%= f.submit "変更を保存",class:"btn btn-success" %>
    </div>
  </div>

<% end %>

</div>