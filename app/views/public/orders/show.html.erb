<h2>注文履歴詳細</h2>

<div class="row">
  <div class="col-sm-6">
    <p>注文情報</p>
     <table class="table table-bordered">
       <tbody class="thead-light">
         <tr>
           <th>注文日</th>
           <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
         </tr>
         <tr>
           <th>配送先</th>
           <td>〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
         </tr>
         <tr>
           <th>支払方法</th>
           <td><%= @order.payment_method %></td>
         </tr>
         <tr>
           <th>ステータス</th>
           <td><%= @order.status %></td>
         </tr>
       </tbody>
     </table>
  </div>

  <div class="col-sm-3">
    <p>請求情報</p>
    <table class="table table-bordered">
      <tbody class="thead-light">
        <tr>
          <th>商品合計</th>
          <td><%= @order.sum %></td>

        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th>ご請求額</th>
          <td><%= @order.total_payment %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <p>注文内容</p>
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th>商品</th>
          <th>単価</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </head>
      <tbody>
        <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.price %></td>
          <td><%= order_item.amount%></td>
          <td><%= order_item.item.price * order_item.amount %></td>
            <% end %>
              <% @order.total_payment = @order.sum + @order.shipping_cost %>
        </tr>
      </tbody>
    </table>
  </div>
</div>



