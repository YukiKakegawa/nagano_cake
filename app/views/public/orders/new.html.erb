<h2>注文情報入力</h2>
  <%= form_with model: @order, local: true, url: orders_confirm_path, method: :get do |f| %>

  <div class="row">
    <%= f.label :is_active,"支払方法" , class:"col-sm-2 col-form-label font-weight-bold" %>
    <div class="col-sm-5">
      <div>
        <%= f.radio_button :payment_method, :クレジットカード, checked: true %>
        <%= f.label :payment_method, 'クレジットカード' %>
      </div>
      <div>
        <%= f.radio_button :payment_method, :銀行振込 %>
        <%= f.label :payment_method, '銀行振込' %>
      </div>
    </div>
  </div>

  <div class="row">
    <%= f.label :is_active,"お届け先" , class:"col-sm-2 col-form-label font-weight-bold" %>
    <div class="col-sm-5">
      <div>
        <%= f.radio_button :address_id, 1 %>
        <%= f.label :address, 'ご自身の住所'  %></br>
        <%= current_customer.postal_code %><%= current_customer.address %></br>
        <%= current_customer.last_name %><%= current_customer.first_name %>
      </div>

    <div class="col-sm-5">
      <div>
        <%= f.radio_button :address_id, 2 %>
        <%= f.label :address_select_id, '登録済み住所から選択' %></br>
        <%= f.collection_select :address_select_id, current_customer.addresses, :id, :view_postal_code_and_address_and_name %>
      </div>

      <div>
        <%= f.radio_button :address_id, 3 %>
        <%= f.label :address, '新しいお届け先' %></br>

        <div class="form-group row">
          <%= f.label :postal_code,"郵便番号（ハイフンなし）" , class:"col-sm-7 col-form-label" %><%= f.text_field :postal_code, class:"form-control" %>
        </div>
        <div class="form-group row">
          <%= f.label :address,"住所" , class:"col-sm-5 col-form-label" %>
          <%= f.text_field :address, class:"form-control" %>
        </div>
        <div class="form-group row">
          <%= f.label :name,"宛名" , class:"col-sm-5 col-form-label" %>
          <%= f.text_field :name, class:"form-control" %>
        </div>
      </div>
      </div>
      </div>
      </div>
<div>
  <%= f.submit "確認画面へ進む", class: "btn btn-success text-center" %>
</div>
<% end %>


