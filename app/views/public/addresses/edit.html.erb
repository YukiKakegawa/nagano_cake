<h2>配送先編集</h2>
<%= form_with model: @address, url: address_path(@address),method: :patch, local:true do |f| %>

<div class="form-group row">
  <%= f.label :postal_code, "郵便番号", class: "col-sm-3 col-form-label" %>
  <%= f.text_field :postal_code, class: "form-control col-sm-3" %>
</div>

<div class="form-group row">
  <%= f.label :address, "住所", class: "col-sm-3 col-form-label" %>
  <%= f.text_field :address, class: "form-control col-sm-6" %>
</div>

<div class="form-group row">
  <%= f.label :name, "宛名", class: "col-sm-3 col-form-label" %>
  <%= f.text_field :name, class: "form-control col-sm-3" %>
</div>

<div class="form-group row">
  <div class="col-sm-4 offset-sm-8">
    <%= f.submit "変更を保存", class: "btn btn-success" %>
  </div>
</div>
<% end %>
