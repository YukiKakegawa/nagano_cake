<h2>商品一覧<span style="font-size:20px;">（全<%= @items_count %>件）</span></h2>

<div class="row">
  <% @items.each do |item| %>
<div class="abc">
  <%= link_to item_path(item) do %><%= attachment_image_tag item, :image, :fill, 150, 150, format: 'jpeg' %><% end %></br>
  <%= item.name %></br>
  <%= item.price %>
</div>
  <% end %>
</div>


