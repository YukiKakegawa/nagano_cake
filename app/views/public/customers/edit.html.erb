<h2>会員情報編集</h2>
<div><%= form_with model:@customer, url: customers_path, local:true do |f| %>

<div class="row">
  <div class="offset-sm-3"></div>
    <div class="col-sm-6">

      <div class="form-group row">
        <%= f.label :full_name, "氏名", class: "col-sm-3 col-form-label" %>
        <%= f.text_field :last_name, class: "form-control col-sm-3" %>
        <%= f.text_field :first_name, class: "form-control col-sm-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :full_name_kana, "フリガナ", class: "col-sm-3 col-form-label" %>
        <%= f.text_field :last_name_kana, class: "form-control col-sm-3" %>
        <%= f.text_field :first_name_kana, class: "form-control col-sm-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :postal_code, "郵便番号", class: "col-sm-3 col-form-label" %>
        <%= f.text_field :postal_code, class: "form-control col-sm-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :full_name_kana, "住所", class: "col-sm-3 col-form-label" %>
        <%= f.text_field :address, class: "form-control col-sm-6" %>
      </div>

      <div class="form-group row">
        <%= f.label :telephone_number, "電話番号", class: "col-sm-3 col-form-label" %>
        <%= f.text_field :telephone_number, class: "form-control col-sm-3" %>
      </div>

      <div class="form-group row">
        <%= f.label :email, "メールアドレス", class: "col-sm-3 col-form-label" %>
        <%= f.text_field :email, class: "form-control col-sm-3" %>
      </div>

      <div class="form-group row">
        <div class="col-sm-3 offset-sm-4">
          <%= f.submit "変更を保存する",class: "btn btn-success" %>
          <% end %>
        </div>
        <div class="col-sm-3">
          <%= link_to '退会する', customers_unsubscribe_path, class: "btn btn-danger" %>
        </div>
      </div>
  </div>
</div>
</div>
